@model StartPoint.GameServer.Areas.BackOffice.Models.QuizCategoryViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/BackOffice/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>QuizCategory</h4>
