            </div>
            <div class="form-group">
                <label asp-for="TitleInFrench" class="control-label"></label>
                <input asp-for="TitleInFrench" class="form-control" />
                <span asp-validation-for="TitleInFrench" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TitleInGerman" class="control-label"></label>
                <input asp-for="TitleInGerman" class="form-control" />
                <span asp-validation-for="TitleInGerman" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TitleInItalian" class="control-label"></label>
                <input asp-for="TitleInItalian" class="form-control" />
                <span asp-validation-for="TitleInItalian" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TitleInSpain" class="control-label"></label>
                <input asp-for="TitleInSpain" class="form-control" />
                <span asp-validation-for="TitleInSpain" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IconInButtonFile" class="control-label"></label>
                <input asp-for="IconInButtonFile" class="form-control" type="file" />
                <span asp-validation-for="IconInButtonFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IconInPartyFile" class="control-label"></label>
                <input asp-for="IconInPartyFile" class="form-control" type="file" />
                <span asp-validation-for="IconInPartyFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-id="@Model.GameId">Back</a>
</div>

