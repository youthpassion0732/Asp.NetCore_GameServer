@model IEnumerable<DomainEntities.Answer>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/BackOffice/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AnswerInEnglish)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnswerInFrench)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnswerInGerman)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnswerInSpain)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnswerInItalian)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsTrue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Question)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AnswerInEnglish)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnswerInFrench)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnswerInGerman)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnswerInSpain)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnswerInItalian)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsTrue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Question.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
